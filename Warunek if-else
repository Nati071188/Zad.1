using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Zad._1
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.Write("Podaj liczbę nr 1 \n");

            int liczba1 = Convert.ToInt32(Console.ReadLine());

            Console.Write("Podaj liczbę nr 2 \n");

            int liczba2 = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine("Wynik mnożenia dwóch liczb wynosi: " + $"{liczba1} * {liczba2} = {liczba1*liczba2}");

            if (liczba1 + liczba2 >= 15)
                Console.WriteLine("Suma podanych liczb jest >= 15 oraz wynosi: " + $"{liczba1} + {liczba2} = {liczba1 + liczba2}");
            else
                Console.WriteLine("Suma podanych liczb jest <15 oraz wynosi: " + $"{liczba1} + {liczba2} = {liczba1 + liczba2}"); ;

            Console.ReadKey();
